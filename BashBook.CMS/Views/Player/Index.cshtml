@model IEnumerable<BashBook.DAL.EDM.Player>

<div class="row" style="text-align: center">
    <div class="col-sm-6">

        <h2>Players</h2>
    </div>
    <div class="col-sm-6">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            Country
        </th>
        <th>
            Role
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LookUpValue.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LookUpValue1.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlayerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlayerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PlayerId })
            </td>
        </tr>
    }

</table>
