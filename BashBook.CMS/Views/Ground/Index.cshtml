@model IEnumerable<BashBook.DAL.EDM.Ground>

<div class="row" style="text-align: center">
    <div class="col-sm-6">
        <h2>Grounds</h2>
    </div>
    <div class="col-sm-6">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LookUpValue.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LookUpValue.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GroundId }) |
            @Html.ActionLink("Details", "Details", new { id=item.GroundId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GroundId })
        </td>
    </tr>
}

</table>
